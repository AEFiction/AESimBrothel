<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL ?>
<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.layout.Priority ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.ScrollPane ?>
<?import javafx.scene.text.Text ?>

<?import aesimbrothel.FileText ?>

<VBox fx:id="rootCol" fx:controller="aesimbrothel.MainController" xmlns:fx="http://javafx.com/fxml" styleClass="root" >
    <stylesheets>
        <URL value="@AESimBrothel.css" />
    </stylesheets>
    <ScrollPane VBox.vgrow="ALWAYS" >
        <FileText location="@GNU-GPL-v3.txt" />
    </ScrollPane>
    <HBox>
        <Button text="Main Menu" onAction="#mainButtonHandler" />
        <Button text="Credits" onAction="#mainButtonHandler" />
        <Pane HBox.hgrow="ALWAYS"></Pane>
        <Button text="Exit" onAction="#mainButtonHandler" />
    </HBox>
</VBox>
